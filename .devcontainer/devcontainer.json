{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "postCreateCommand": "npm install",
    "postAttachCommand": {
      "server": "npm run dev"
    },
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md",
          ".env.example"
        ]
      }
    },
    "portsAttributes": {
      "3000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [3000]
  }
